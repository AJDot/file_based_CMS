<form method="post" action="/users/signin">
  <div>
    <label name="username">Username:
      <input name="username" value="<%= params[:username] %>" />
    </label>
  </div>
  <div>
    <label name="password">Password:
      <input type="password" name="password" />
    </label>
  </div>
  <button type="submit">Sign In</button>
</form>
